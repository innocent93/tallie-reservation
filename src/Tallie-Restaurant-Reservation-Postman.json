{
  "info": {
    "name": "Tallie Restaurant Reservation API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "restaurantId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/users/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin\",\n  \"email\": \"admin@tallie.com\",\n  \"password\": \"password123\",\n  \"role\": \"admin\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/users/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@tallie.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/users/me"
          }
        }
      ]
    },
    {
      "name": "Restaurants",
      "item": [
        {
          "name": "Create Restaurant",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/restaurants",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Tallie Bistro\",\n  \"openingTime\": \"10:00\",\n  \"closingTime\": \"22:00\",\n  \"totalTables\": 10\n}"
            }
          }
        },
        {
          "name": "Add Table",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{baseUrl}}/restaurants/{{restaurantId}}/tables",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tableNumber\": 1,\n  \"capacity\": 4\n}"
            }
          }
        },
        {
          "name": "Check Availability",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/restaurants/{{restaurantId}}/availability?date=2026-01-12&partySize=4&duration=120"
          }
        }
      ]
    },
    {
      "name": "Reservations",
      "item": [
        {
          "name": "Create Reservation",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/reservations",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurantId\": \"{{restaurantId}}\",\n  \"customerName\": \"John Doe\",\n  \"phone\": \"08012345678\",\n  \"partySize\": 4,\n  \"startTime\": \"2026-01-12T19:00:00\",\n  \"duration\": 120\n}"
            }
          }
        }
      ]
    }
  ]
}
